{
  "crdt_enabled": true,
  "node_id": "auto",
  "description": "CRDT configuration for distributed Jarvis v0.2 architecture",
  
  "storage": {
    "backend": "sqlite",
    "database_path": "data/jarvis_archive.db",
    "backup_interval_hours": 1,
    "enable_compression": true
  },
  
  "operation_mapping": {
    "memory_store": "or_set",
    "memory_retrieve": "g_counter",
    "llm_query": "g_counter",
    "verification": "lww_register",
    "health_check": "g_counter",
    "configuration": "lww_register",
    "archive_entry": "or_set",
    "backup_create": "g_set",
    "system_status": "lww_register",
    "resource_usage": "pn_counter",
    "agent_workflow": "or_set",
    "error_handling": "g_set",
    "dashboard_metrics": "lww_register"
  },
  
  "synchronization": {
    "enabled": false,
    "mode": "local_only",
    "batch_size": 1000,
    "max_delta_size_mb": 10,
    "retry_attempts": 3,
    "retry_backoff": "exponential"
  },
  
  "security": {
    "enable_authentication": false,
    "enable_operation_signing": false,
    "enable_access_control": false
  },
  
  "monitoring": {
    "enable_metrics": true,
    "enable_health_checks": true,
    "enable_performance_monitoring": true,
    "enable_conflict_reporting": true
  },
  
  "debugging": {
    "log_level": "INFO",
    "log_operations": false,
    "log_synchronization": false,
    "enable_profiling": false
  }
}
{
  "aggregation_config": {
    "auto_run_after_tests": true,
    "auto_cleanup_old_logs": true,
    "max_log_age_days": 7,
    "max_total_log_size_mb": 500,
    "report_retention_days": 30,
    
    "triggers": {
      "after_full_test_suite": true,
      "after_performance_tests": true,
      "daily_schedule": "23:30",
      "manual_trigger": true
    },
    
    "file_patterns": {
      "function_tests": ["function_test_results_*.json"],
      "performance_logs": ["perf_event_*.json", "concurrent_log_*.json", "large_event_*.json"],
      "workflow_logs": ["workflow_event_*.json", "test_event_*.json"],
      "agent_reports": ["agent_report_*.json"],
      "error_logs": ["error_log*.jsonl"]
    },
    
    "analysis_settings": {
      "sample_performance_logs": 100,
      "sample_concurrent_logs": 50,
      "max_recent_errors": 20,
      "health_score_thresholds": {
        "excellent": 95,
        "good": 80,
        "warning": 60,
        "critical": 0
      }
    },
    
    "output_settings": {
      "generate_json": true,
      "generate_markdown": true,
      "generate_summary_only": false,
      "include_raw_data": false,
      "compress_old_reports": true
    },
    
    "notification_settings": {
      "notify_on_critical": true,
      "notify_on_warning": false,
      "email_reports": false,
      "slack_integration": false
    },
    
    "cleanup_rules": {
      "delete_old_performance_logs": true,
      "archive_old_reports": true,
      "compress_large_logs": true,
      "max_concurrent_log_files": 1000,
      "max_performance_log_files": 2000
    }
  }
}